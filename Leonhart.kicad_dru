(version 1)
(rule "DDR track-to-track clearance"
  (constraint clearance (min 0.3mm))
  (condition "A.Type == 'track' && B.Type == 'track' && A.NetClass == 'DDR_SE' && B.NetClass == 'DDR_SE'")
)

(rule "DDR via clearance relaxed in escape"
  (constraint clearance (min 0.1mm))
  (condition "(A.Type == 'via' || B.Type == 'via') && A.NetClass == 'DDR_SE' && B.NetClass == 'DDR_SE' && A.InsideArea('DDR_ESCAPE') && B.InsideArea('DDR_ESCAPE')")
)
